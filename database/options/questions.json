{
    "options": {
        "constraint": [
            {
                "name": "askedBy",
                "range": {
                    "facet": "false",
                    "path-index": {
                        "text": "/owner/displayName"
                    },
                    "type": "xs:string"
                }
            },
            {
                "name": "answeredBy",
                "range": {
                    "facet": "false",
                    "path-index": {
                        "text": "/answers/owner/displayName"
                    },
                    "type": "xs:string"
                }
            },
            {
                "name": "commentedBy",
                "range": {
                    "facet": "false",
                    "path-index": {
                        "text": "//comments/owner/displayName"
                    },
                    "type": "xs:string"
                }
            },
            {
                "name": "user",
                "value": {
                    "json-property": "displayName"
                }
            },
            {
                "name": "userName",
                "value": {
                    "json-property": "userName"
                }
            },
            {
                "name": "id",
                "range": {
                    "facet": "false",
                    "json-property": "id",
                    "type": "xs:string"
                }
            },
            {
                "name": "title",
                "word": {
                    "json-property": "title"
                }
            },
            {
                "name": "resolved",
                "value": {
                    "json-property": "accepted"
                }
            },
            {
                "name": "lastActivity",
                "range": {
                    "facet": "false",
                    "json-property": "lastActivityDate",
                    "type": "xs:dateTime"
                }
            },
            {
                "name": "votes",
                "range": {
                    "facet": "false",
                    "json-property": "voteCount",
                    "type": "xs:long"
                }
            },
            {
                "name": "answers",
                "range": {
                    "facet": "false",
                    "json-property": "answerCount",
                    "type": "xs:long"
                }
            },
            {
                "name": "tag",
                "range": {
                    "facet": "true",
                    "facet-option": [
                        "frequency-order",
                        "descending",
                        "limit=10"
                    ],
                    "json-property": "tags",
                    "type": "xs:string"
                }
            }
        ],
        "debug": true,
        "default-suggestion-source": {
            "word": {
                "json-property": "title"
            }
        },
        "extract-document-data": {
            "extract-path": [
                "/array-node('answers')",
                "/array-node('comments')"
            ],
            "selected": "exclude"
        },
        "operator": {
            "name": "sort",
            "state": [
                {
                    "name": "active",
                    "sort-order": {
                        "direction": "descending",
                        "json-property": "lastActivityDate"
                    }
                },
                {
                    "name": "votes",
                    "sort-order": {
                        "direction": "descending",
                        "json-property": "voteCount"
                    }
                },
                {
                    "name": "relevance",
                    "sort-order": {
                        "direction": "descending",
                        "score": null
                    }
                }
            ]
        },
        "return-facets": true,
        "return-qtext": true,
        "return-query": true,
        "term": {
            "empty": { "apply": "all-results" },
            "default": {"word":
                {"field":{"name":"default-samplestack-search"}}}
        },
        "transform-results":{
            "apply":"snippet",
            "max-snippet-chars":50,
            "max-matches":4,
            "per-match-tokens":5,
            "preferred-matches":{"json-property":["text","title"]}
        },
        "values": [
            {
                "name": "lastActivityDate",
                "range": {
                    "json-property": "lastActivityDate",
                    "type": "xs:dateTime"
                }
            }
        ]
    }
}
